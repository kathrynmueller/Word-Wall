<div class="container">
	<div id="definition">
		<div class="card">
		<%= render 'form', word: @word %>


		  <% if @response != nil %>
		    <h1><%= @new_word %>:</h1>
		    <div class="row">
		      <div class="col-md-7">
		        <p><%=@definition%></p>
		      </div>
		    </div>
		    <% else %>
		      <p>Your definition will appear here.</p>
		    <% end %>
		</div>
	</div>

			<!-- <h2>Your Word Wall</h2>
			<h3>Look up more words to keep building!</h3> -->
			<p>
			<% @words.each do |word| %>
		        <%= word.word %>
		    <% end %>
			</p>
		    <%= link_to 'Edit your Word Wall', words_path %>

</div>


